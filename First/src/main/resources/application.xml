<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="default">
	<bean id="mysql" class="com.mysql.cj.jdbc.MysqlDataSource">
		<property name="url"
			value="jdbc:mysql://localhost:3306/assignment_one"></property>
		<property name="user" value="root"></property>
		<property name="password" value="admin"></property>
	</bean>

	<bean id="courseModel"
		class="com.jdc.assignment.modle.Imp.CourseModelImp">
		<constructor-arg ref="mysql"></constructor-arg>
	</bean>

	<bean id="openClassModel"
		class="com.jdc.assignment.modle.Imp.OpenClassModelImp">
		<constructor-arg ref="mysql"></constructor-arg>
	</bean>

	<bean id="regModel"
		class="com.jdc.assignment.modle.Imp.RegistrationModelImp">
		<constructor-arg ref="mysql"></constructor-arg>
	</bean>

</beans>
